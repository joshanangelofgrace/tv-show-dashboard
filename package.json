    "@vue/tsconfig": "^0.8.1",
    "axios": "1.12.2",
    "eslint": "^9.37.0",
    "eslint-plugin-oxlint": "~1.19.0",
    "eslint-plugin-playwright": "^2.2.2",
    "eslint-plugin-vue": "~10.5.0",
    "jiti": "^2.6.1",
    "jsdom": "^27.0.0",
    "lodash": "4.17.21",
    "npm-run-all2": "^8.0.4",
    "oxlint": "1.19.0",
    "prettier": "3.6.2",
    "typescript": "5.9.3",
    "vite": "^7.1.9",
    "vite-plugin-vue-devtools": "^8.0.2",
    "vitest": "^3.2.4",
    "vue-i18n": "11.1.12",
    "vue-tsc": "^3.1.0"
  }
